<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:neumorph_shapeType="basin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    android:background="@color/white"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/cardbg"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displayname"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="User Name"
            android:textColor="@color/headercolor"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displayaddress"
            android:textSize="25sp"
            android:text="User address"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/displaydate"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displaytype"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="Complaint type"
            android:layout_marginTop="3dp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displaycmp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Complaint"
            android:layout_marginTop="3dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#46E873"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-140dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/accept" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD2323"
            android:layout_marginLeft="270dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/reject" />
    </LinearLayout>
</soup.neumorphism.NeumorphCardView>
